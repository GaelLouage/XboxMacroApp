<Window x:Class="XboxMacroApp.FormButtonAssigner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XboxMacroApp"
        mc:Ignorable="d"
        Title="FormButtonAssigner" Height="400" Width="200">
    <Grid Loaded="Grid_Loaded">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="txtProgramName" Grid.Row="0" Grid.ColumnSpan="2" Grid.Column="0" Margin="10"/>
        <ComboBox x:Name="cmbButtons" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="10" Cursor="Hand" Height="80" SelectionChanged="cmbButtons_SelectionChanged"/>
        <Button x:Name="btnAssignKey" Content="Assign Key" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="3" Margin="10,10,10,10" Click="btnAssignKey_Click" Cursor="Hand" Height="80"/>
    </Grid>
</Window>
